<?xml version="1.0" encoding="UTF-8" ?>
<Module>
<ModulePrefs title="visual-planner/dev" description="Visual Planner for Google Calendar" author="Chris Thompson">
<Require feature="google.calendar-0.5.read"/>
<Require feature="views"/>
<Require feature="setprefs"/>
<Require feature="dynamic-height"/>
</ModulePrefs>
<UserPref name="show_single_col" datatype="bool" default_value="false"/>
<Content type="html">
<![CDATA[
<center>
<button type="button" title="Multi-column View" onclick="show_multi_col();"><b>||||</b></button>
<button type="button" title="Single-column View" onclick="toggle_single_col();"><b>|</b></button>
<button type="button" title="Settings" onclick="show_settings();"><b>*</b></button>
</center>
<script type="text/javascript" src="https://rawgit.com/ctcode/visual-planner/dev/vip_analytics.js"></script>
<script type="text/javascript" src="https://rawgit.com/ctcode/visual-planner/dev/vip_lib.js"></script>
<script type="text/javascript" src="https://rawgit.com/ctcode/visual-planner/dev/vip_main.js"></script>
<script type="text/javascript" src="https://rawgit.com/ctcode/visual-planner/dev/vip_gadget.js"></script>
<script type="text/javascript">gadgets.util.registerOnLoadHandler(InitSingleColView);</script>
]]>
</Content>
<Content type="html" view="canvas">
<![CDATA[
<script type="text/javascript" src="https://rawgit.com/ctcode/visual-planner/dev/vip_analytics.js"></script>
<script type="text/javascript" src="https://rawgit.com/ctcode/visual-planner/dev/vip_lib.js"></script>
<script type="text/javascript" src="https://rawgit.com/ctcode/visual-planner/dev/vip_main.js"></script>
<script type="text/javascript" src="https://rawgit.com/ctcode/visual-planner/dev/vip_gadget.js"></script>
<script type="text/javascript">gadgets.util.registerOnLoadHandler(InitMultiColView);</script>
]]>
</Content>
</Module>
